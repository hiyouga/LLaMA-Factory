{
    "zero_optimization": {
      "stage": 3,
      "overlap_comm": true,
      "contiguous_gradients": true,
      "sub_group_size": 1e9,
      "reduce_bucket_size": 1e9,
      "stage3_prefetch_bucket_size": 1e9,
      "stage3_param_persistence_threshold": 1e5,
